          <%= form.text_field :name,  placeholder:  "Ваше имя",  class: "typeLine" %>
          <%= form.text_field :phone, placeholder: "+7 ___",     class: "typeLine" %>
          <%= form.text_field :slave, placeholder: "Тема вопроса", class: "typeLine" %>
